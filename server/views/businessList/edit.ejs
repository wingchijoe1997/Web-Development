<%- include ../partials/header.ejs %> <%- include ../partials/main_nav.ejs %>

<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <h1 class="edit-text" <%="title" %></h1>
      <form class="form" method="POST">
        <div class="form-group">
          <label for="nameTextField" class="edit-text">Name</label
          ><input
            type="text"
            class="form-control"
            id="nameTextField"
            placeholder="Enter the name"
            name="name"
            value="<%= Business.name%>"
            required
          />
        </div>

        <div class="form-group">
          <label for="email" class="edit-text">Email</label>
          <input
            id="email"
            class="form-control"
            type="email"
            name="email"
            placeholder="me@example.com"
            value="<%= Business.email%>"
            required
          />
        </div>

        <div class="form-group">
          <label for="businessContact" class="edit-text">Contact</label
          ><input
            type="number"
            class="form-control"
            id="businessContact"
            placeholder="Enter the Contact Number"
            name="contact"
            value="<%= Business.contact%>"
            required
          />
        </div>
        <button class="btn btn-primary" type="submit">
          <i class="fas fa-edit"></i> Submit
        </button>

        <a href="/business" class="btn btn-warning"
          ><i class="fas fa-undo">Cancel</i></a
        >
      </form>
    </div>
  </div>
</div>

<%- include ../partials/bottom_nav.ejs %> <%- include ../partials/footer.ejs %>
